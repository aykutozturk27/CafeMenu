@model UserForRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Admin/Views/Shared/_AuthLayout.cshtml";
}

<div class="text-center">
    <h1>Kullanıcı Kayıt Ekranı</h1>
</div>

<form method="post" asp-controller="Auth" asp-action="Register">
    <div class="form-group row mt-3">
        <label class="col-sm-4 form-label" asp-for="Name">Adı</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label class="col-sm-4 form-label" asp-for="SurName">Soyadı</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="SurName" />
            <span asp-validation-for="SurName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label class="col-sm-4 form-label" asp-for="Username">Kullanıcı Adı</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mt-3">
        <label class="col-sm-4 form-label" asp-for="Password">Şifre</label>
        <div class="col-sm-8">
            <input class="form-control" type="text" asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-3 d-grid gap-2 col-4 mx-auto">
        <button type="submit" class="btn btn-primary">Kayıt Ol</button>
    </div>
</form>